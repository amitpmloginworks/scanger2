<% include partials/header %>
<body class="animsition">
    <div class="page-wrapper">
        <% include partials/sidebar %>
        <div class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header">Ranking</div>
                                <div class="card-body">
                                    <hr>
                                    <div style="max-width:100%;" class="container">      
                                            <table class="table table-bordered">
                                              <thead>
                                                <tr>
                                                  <th>Name</th>
                                                  <th>Profile Picture</th>
                                                  <th>Total Points</th>
                                                  <th>Ranking</th> 
                                                     </tr>
                                              </thead>
                                              <tbody>
                                                <% for(var i=0; i < data.length; i++) { %>
                                                <tr>
                                                        <% if (data[i].user[0]!=null && data[i].totalpoints!=0) { %> 
                                                  <td><%= data[i].user[0].username %></td>
                                                  <td style="    width: 200px;">   
                                                    <img style="    width: 100px;" src="<%= data[i].user[0].profile_pic %>">
                                                </td>
                                               
                                                  <td><%= data[i].totalpoints %></td>
                                                  <td><%= i+1 %></td>
                                                  <% } %>
                                                 </tr>
                                                <% } %>
                                              </tbody>
                                            </table>
                                  </div>
                                  <% if (pages > 0) { %>
                                    <ul class="pagination text-center">
                                        <% if (current == 1) { %>
                                            <li class="disabled"><a>First</a></li>
                                        <% } else { %>
                                            <li><a href="/getgainranking/1">First</a></li>
                                        <% } %>
                                        <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                        <% if (i !== 1) { %>
                                            <li class="disabled"><a>...</a></li>
                                        <% } %>
                                        <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                            <% if (i == current) { %>
                                                <li class="active"><a><%= i %></a></li>
                                            <% } else { %>
                                                <li><a href="/getgainranking/<%= i %>"><%= i %></a></li>
                                            <% } %>
                                            <% if (i == Number(current) + 4 && i < pages) { %>
                                                <li class="disabled"><a>...</a></li>
                                            <% } %>
                                        <% } %>
                                        <% if (current == pages) { %>
                                            <li class="disabled"><a>Last</a></li>
                                        <% } else { %>
                                            <li><a href="/getgainranking/<%= pages %>">Last</a></li>
                                        <% } %>
                                    </ul>
                                <% } %>
                              </div>
                            </div>
                        </div>
            </div>
        </div>
 
</body>
   

<% include partials/footer %>

</script>
